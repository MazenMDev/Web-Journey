{
  "git.autofetch": true,
  "task.allowAutomaticTasks": "on",
  "git.enableSmartCommit": true,
  "git.confirmSync": false,
  "workbench.iconTheme": "vscode-icons",
  "C_Cpp.errorSquiggles": "enabled",
  "C_Cpp.default.intelliSenseMode": "windows-gcc-x64",
  "C_Cpp.default.compilerPath": "C:/MinGW/bin/g++.exe",
  "editor.mouseWheelZoom": true,
  "terminal.integrated.mouseWheelZoom": true,
  "git.ignoreRebaseWarning": true,
  "tabnine.experimentalAutoImports": true,
  "github.copilot.advanced": {},
  "github.copilot.nextEditSuggestions.enabled": true,
  "gitlens.ai.model": "vscode",
  "gitlens.ai.vscode.model": "copilot:gpt-4-turbo",
  "terminal.integrated.fontSize": 19,
  "github.copilot.enable": {
    "*": false,
    "plaintext": true,
    "markdown": false,
    "scminput": false,
    "css": true,
    "javascript": false
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "css.format.enable": false,
  "editor.formatOnSave": true,
  "files.autoSave": "afterDelay",
  "editor.tabSize": 2,
  "workbench.editorAssociations": {
    "*.copilotmd": "vscode.markdown.preview.editor",
    "*.html": "default"
  },
  "workbench.colorCustomizations": {
    "editor.background": "#0f0f0f",
    "editor.foreground": "#eaeaea",
    "editor.lineHighlightBackground": "#1a1a1a",
    "editor.selectionBackground": "#2a2a2a",
    "editorCursor.foreground": "#ffffff",
    "editorLineNumber.foreground": "#5c5c5c",
    "sideBar.background": "#0c0c0c",
    "activityBar.background": "#111111",
    "activityBar.foreground": "#ffffff",
    "activityBar.activeBorder": "#ffffff",
    "activityBar.activeBackground": "#1a1a1a",
    "activityBar.inactiveForeground": "#6b6b6b",
    "activityBarBadge.background": "#ffb86c",
    "activityBarBadge.foreground": "#000000",
    "statusBar.background": "#0d0d0d",
    "statusBar.foreground": "#ffffff",
    "tab.activeBackground": "#181818",
    "tab.inactiveBackground": "#0f0f0f",
    "tab.activeForeground": "#ffffff",
    "tab.inactiveForeground": "#808080",
    "tab.border": "#0f0f0f"
  },
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": "comment",
        "settings": {
          "foreground": "#6C7086",
          "fontStyle": "italic"
        }
      }
    ]
  },
  "editor.fontFamily": "Cascadia Code, Fira Code, 'JetBrains Mono', monospace",
  "editor.fontSize": 15,
  "editor.lineHeight": 1.6,
  "editor.cursorBlinking": "expand",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.cursorWidth": 2,
  "editor.smoothScrolling": true,
  "window.zoomLevel": 0.3
}
